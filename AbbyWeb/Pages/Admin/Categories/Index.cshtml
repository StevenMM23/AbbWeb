@page
@model AbbyWeb.Pages.Admin.Categories.IndexModel

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a asp-page="create" class="btn btn-primary">
                <i class="bi bi-plus-square"/>Create New Category
            </a>
        </div>
    </div>
    
    <br/>
    <table class="table table-bordered table-striped" style="width: 100%">
        
        <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
        </tr>

        </thead>
        
        <tbody>
        
            @foreach (var category in @Model.Categories)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            
                        <a asp-page="Edit" asp-route-id="@category.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                        <a asp-page="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                        </div>
                    </td>
                </tr>
            }
            

        
        </tbody>

    </table>
</div>