@page
@model AbbyWeb.Pages.Food.Edit


<form method="post">
    <input hidden asp-for="Food.Id"/>
    <div class="border p-3 mt-4">
        <div class="text-primary pl-3"> Create Category</div>
        <hr/>

        <div asp-validation-summary="All"></div>

        <div class="mb-3">
            <label asp-for="@Model.Food.Name"></label>
            <input asp-for="@Model.Food.Name" class="form-control"/>
            <span asp-validation-for="Food.Name"></span>
        </div>

        <button type="submit" class="btn btn-primary" syle="width: 150px">Update</button>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="Shared/_ValidationScriptsPartial"/>
    }
}
