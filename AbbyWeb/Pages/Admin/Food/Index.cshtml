@page
@model AbbyWeb.Pages.Food.Index


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a asp-page="create" class="btn btn-primary">
                Create New Category
            </a>
        </div>
    </div>
    
    <br/>
    <table class="table table-bordered table-striped" style="width: 100%">
        
        <thead>
        <tr>
            <th>
                Food Name
            </th>
        </tr>

        </thead>
        
        <tbody>
        
            @foreach (var food in @Model.Food)
            {
                <tr>
                    <td>@food.Name</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            
                        <a asp-page="Edit" asp-route-id="@food.Id" class="btn btn-primary mx-2">
                            Edit
                        </a>

                        <a asp-page="Delete" asp-route-id="@food.Id" class="btn btn-danger mx-2">
                            Delete
                        </a>
                        </div>
                    </td>
                </tr>
            }
            

        
        </tbody>

    </table>
</div>